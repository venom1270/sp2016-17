
<h2 class="center">Register</h2>

<section id="registerWrapper">

    @if (ViewBag.Errors != null)
    {
        foreach (string error in ViewBag.Errors)
        {
            <div style="color:red;" class="center">@error</div><br />
        }
    }

    <form id="registerForm" method="POST" action="@Url.Action("TryRegister", "Register")">
        @Html.AntiForgeryToken()
        <label>Username:</label> <input type="text" name="username" required/><br />
        <label>Password:</label> <input type="password" name="password" required/><br />
        <label>Repeat password:</label> <input type="password" name="passwordRepeat" required/><br />
        <label>Email:</label> <input type="email" name="email" required/><br />
        <input type="submit" value="Register" />
    </form>

    <div class="center">Already registered? Go to @Html.ActionLink("login", "Index", "Login").</div>

</section>
